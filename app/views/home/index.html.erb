<%= form_tag "https://login.salesforce.com/services/oauth2/authorize", :class=>"form-horizontal" do %>
  <div class="control-group">
    <label class="control-label" for="response_type">response_type</label>
    <div class="controls">
      <%= text_field_tag "response_type", "code", :id=>"response_type", :class=>"span8" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="client_id">Consumer Key</label>
    <div class="controls">
      <%= text_field_tag "client_id", "", :id => "client_id", :placeholder=>"Your Consumer Key", :class=>"span8" %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="redirect_uri">Callback URL</label>
    <div class="controls">
      <%= text_field_tag "redirect_uri", "https://get-chatter-accesstoken.herokuapp.com/callback/YOUR_UNIQUE_NAME", :id => "redirect_uri", :class=>"span8" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= submit_tag "Send", :class=>"btn btn-primary" %>
    </div>
  </div>

<% end %>
